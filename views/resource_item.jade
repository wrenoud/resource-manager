extends layout

include components/breadcrumb
include components/buttons

block head

block headline
  +breadcrumbs(Resource.cache,
    {
      'name': ResourceDefinition.display,
      'path': appPath(ResourceDefinition.name)
    })

  h1!= Resource.cache
    |  
    +button_edit( appPath(ResourceDefinition.name, Resource.id) )

block content
  table.table
    each property in Resource.properties
      tr
        th= property.name
        td!= property.cache
