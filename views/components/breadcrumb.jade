ol.breadcrumb
  if ResourceDefinition && Resource
    li
      a(href="/resources/") Resources
    li
      a(href="/resources/" + ResourceDefinition.name + '/')= ResourceDefinition.display
    li.active= Resource.text
  else if ResourceDefinition
    li
      a(href="/resources/") Resources
    li.active
      a(href="/resources/" + ResourceDefinition.name + '/')= ResourceDefinition.display
  else
    li.active Resources
