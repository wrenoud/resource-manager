extends layout

block head
  
block content
  h1 New #{ResourceDefinition.display} Definition
  div
    form(method="post")
      #resource
        each property in ResourceDefinition.PropertyDefinitions
          div.form-element
            label= property.name
              if property.computed
                input(type="text", disabled="disabled")
              else
                input(type="text", name=property.name, value=property.default)
          div.clear
      #submit
        input(type="submit")